<div class="container center-align-form"> 
      <div class="col-md-3 text-center">
          <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
        </div>
  <div class="col-md-6">
      
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        <h3><span><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
     
      <div class="well description-block">
        <h3>Description</h3>
        <%= @user.profile.description %>
        </div>
        <% if current_user.plan_id == 2 %>
        <div class="well">
        <h3><%= @user.profile.phone_number %></h3>
        <h3><%= @user.profile.contact_email %></h3>
      </div>    
          
      <% end %>
    
  </div>  
</div>