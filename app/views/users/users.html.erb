<div class="container">
  <div  class="col-sm-4 col-sm-offset-4 col-xs-12">
    <h2><%=t :SIGN_UP %></h2>
    <hr>
    <%= form_for "/users" do |f| %>
      <div class="form-group">
        <label for="user_name"><%=t :NAME %></label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="user_email"><%=t :EMAIL %></label>
        <%= f.text_field :email, class: 'form-control', placeholder: 'email@example.com' %>
      </div>
      <div class="form-group">
        <label for="user_password"><%=t :PASSWORD %></label>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="user_password_confirmation"><%=t :PASSWORD_CONFIRM %></label>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <button type="submit" class="btn btn-success"><%=t :SUBMIT %></button>
    <% end %>
  </div>
</div>